{
  "name": "binary-homeworlds",
  "version": "1.0.0",
  "description": "TypeScript rules engine for Binary Homeworlds game",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\" \"ui/src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"ui/src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit && cd ui && npx tsc --noEmit",
    "typecheck:staged": "npm run typecheck",
    "prepare": "husky",
    "ui:dev": "vite --config vite.config.ui.ts",
    "ui:build": "vite build --config vite.config.ui.ts",
    "ui:preview": "vite preview --config vite.config.ui.ts"
  },
  "keywords": [
    "game",
    "binary-homeworlds",
    "rules-engine",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "ui/src/**/*.{ts,tsx}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vite": "^5.4.19"
  }
}
