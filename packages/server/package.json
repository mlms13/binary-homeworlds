{
  "name": "@binary-homeworlds/server",
  "version": "1.0.0",
  "description": "Fastify server for Binary Homeworlds multiplayer game",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@binary-homeworlds/shared": "file:../shared",
    "@fastify/cors": "^10.0.1",
    "@fastify/static": "^8.0.2",
    "fastify": "^5.2.0",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "uuid": "^11.0.4"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
