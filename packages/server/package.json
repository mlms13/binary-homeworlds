{
  "name": "@binary-homeworlds/server",
  "version": "1.0.0",
  "description": "Fastify server for Binary Homeworlds multiplayer game",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "lint:fix": "eslint \"src\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@binary-homeworlds/shared": "file:../shared",
    "@fastify/cors": "^10.0.1",
    "@fastify/static": "^8.0.2",
    "dotenv": "^17.2.0",
    "fastify": "^5.2.0",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "uuid": "^11.0.4"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/uuid": "^10.0.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
