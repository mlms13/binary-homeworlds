{
  "name": "@binary-homeworlds/ui-client",
  "version": "1.0.0",
  "description": "React UI client for Binary Homeworlds multiplayer game",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@binary-homeworlds/shared": "file:../shared",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "dotenv": "^17.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@vitejs/plugin-react": "^4.6.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^5.4.19"
  }
}
