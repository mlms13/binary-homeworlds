{
  "name": "@binary-homeworlds/shared",
  "version": "1.0.0",
  "description": "Shared game logic for Binary Homeworlds",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "game",
    "binary-homeworlds",
    "rules-engine",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@binary-homeworlds/engine": "file:../engine"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@vitest/ui": "^3.2.4",
    "prettier": "^3.6.2",
    "tsup": "^8.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
